<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/blackSpace</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Dark" parent="AppTheme">
        <item name="colorPrimary">@color/darkBase</item>
        <item name="colorPrimaryDark">@color/darkStroke</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:windowBackground">@color/blackSpace</item>
        <item name="android:textColor">@color/font1</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="menuSettings">@style/Settings</item>
        <item name="header">@style/header</item>
        <item name="mainButtonBack">@drawable/button_rocket</item>
        <item name="dialogButton">@style/MyDialogButton</item>
    </style>

    <style name="Light" parent="AppTheme">
        <item name="colorPrimary">@color/lightBase</item>
        <item name="colorPrimaryDark">@color/lightStroke</item>
        <item name="colorAccent">@color/lightAccent</item>
        <item name="android:windowBackground">@color/blueSky</item>
        <item name="android:textColor">@color/blackSpace</item>
        <item name="android:buttonStyle">@style/MyButton</item>
        <item name="menuSettings">@style/Settings</item>
        <item name="header">@style/header</item>
        <item name="mainButtonBack">@drawable/button_rocket_light</item>
        <item name="dialogButton">@style/MyDialogButton</item>
    </style>

    <style name="MyButton">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?attr/mainButtonBack</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="MyDialogButton" parent="MyButton">
        <item name="android:buttonStyle">@style/MyDialogButton</item>
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

