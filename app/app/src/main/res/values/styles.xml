<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/blackSpace</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Dark" parent="AppTheme">
        <item name="colorPrimary">@color/darkBase</item>
        <item name="colorPrimaryDark">@color/darkStroke</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:windowBackground">@color/blackSpace</item>
        <item name="android:textColor">@color/font1</item>
        <item name="android:buttonStyle">@style/MyButtonDark</item>
        <item name="android:dialogTheme">@style/MyDialogDark</item>
    </style>

    <style name="Light" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/blueSky</item>
        <item name="android:textColor">@color/blackSpace</item>
        <item name="android:buttonStyle">@style/MyButtonLight</item>
        <item name="android:dialogTheme">@style/MyDialogLight</item>
    </style>

    <style name="MyButton">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="MyButtonDark" parent="MyButton">
        <item name="android:background">@drawable/button_rocket</item>
        <item name="android:textColor">@color/darkStroke</item>
    </style>

    <style name="MyButtonLight" parent="MyButton">
        <item name="android:background">@drawable/button_rocket</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MyDialogDark">
        <item name="android:background">@color/darkBase</item>
        <item name="android:textColor">@color/darkStroke</item>
        <item name="android:buttonStyle">@style/MyDialogButtonDark</item>
    </style>

    <style name="MyDialogButtonDark" parent="MyButton">
        <item name="android:background">@drawable/dialog_button_dark</item>
        <item name="android:textColor">@color/darkAccent</item>
    </style>

    <style name="MyDialogLight">
        <item name="android:background">@color/darkBase</item>
        <item name="android:textColor">@color/darkStroke</item>
        <item name="android:buttonStyle">@style/MyDialogButtonDark</item>
    </style>

    <style name="MyDialogButtonLight" parent="MyButton">
        <item name="android:background">@drawable/dialog_button_dark</item>
        <item name="android:textColor">@color/darkAccent</item>
    </style>


</resources>
